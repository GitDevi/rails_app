<ul id="subjects">
<%Subject.find(:all).each do |c|%>
<li><%=link_to c.name,:action=>"show_subjects",:id=>c.id%></li>
<%end%>
</ul>
<%if @books.blank?%>
<p>There are no books currently in the system</p>
<%else%>
<p>These are current books in our system</p>
<ul id='books'>
<% @books.each do |c| %>
<li><%=link_to c.title,{:action=>'show',:id=>c.id}%></li>
<%end%>
</ul>
<%end%>
<p><%=link_to "Add new book", {:action=>'new'}%></p>
